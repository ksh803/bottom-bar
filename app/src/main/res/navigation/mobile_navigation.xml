<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">


    <fragment
        android:id="@+id/navigation_file"
        android:name="com.example.bottom_bar.ui.file.FileFragment"
        android:label="@string/title_file"
        tools:layout="@layout/fragment_file" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.bottom_bar.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bottom_bar.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_memo"
        android:name="com.example.bottom_bar.ui.memo.MemoFragment"
        android:label="@string/title_memo"
        tools:layout="@layout/fragment_memo" />

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.example.bottom_bar.ui.calendar.CalendarFragment"
        android:label="@string/title_calendar"
        tools:layout="@layout/fragment_calendar" />
</navigation>